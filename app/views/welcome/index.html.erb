<div class="row">
  <div class="large-12 large-centered columns">
    <h1>As the crow flies</h1>
  </div>
  <div class="large-6 columns">
    <div id='location1'>
      <%= text_area_tag(:city1, "Durham") %>
      <%= text_area_tag(:lat1) %>
      <%= text_area_tag(:lon1) %>
    </div>
  </div>

  <div class="large-6 columns">
    <div id='location2'>
      <%= text_area_tag(:city2, "New York") %>
      <%= text_area_tag(:lat2) %>
      <%= text_area_tag(:lon2) %>
    </div>
  </div>

  <div class="large-12 columns">
    <%= text_area_tag(:distance) %>
  </div>
</div>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
